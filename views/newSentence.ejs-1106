        </table>
      </div>
      
      <div class="cate" id="cate">
        <table style="width: 100%">
          <%for(var i=0;i < category.length;i+=6){%>
          <tr>
            <td>
              <input class="cell1" type="button" value="<%=category[i].cate%>" id="<%=category[i].cate_id%>" onclick="chooseCate(this.id, this.value)">
            </td>
            <td>
              <input class="cell2" type="button" value="<%=category[i+1].cate%>" id="<%=category[i+1].cate_id%>" onclick="chooseCate(this.id, this.value)">
            </td>
            <td>
              <input class="cell1" type="button" value="<%=category[i+2].cate%>" id="<%=category[i+2].cate_id%>" onclick="chooseCate(this.id, this.value)">
            </td>
            <td>
              <input class="cell2" type="button" value="<%=category[i+3].cate%>" id="<%=category[i+3].cate_id%>" onclick="chooseCate(this.id, this.value)">
