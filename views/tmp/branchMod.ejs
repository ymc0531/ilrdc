<!DOCTYPE html>
<html lang="en">

<head>
    <% include head %>
    <link href="/dashboard/css/branch-list.css" rel="stylesheet">
</head>

<body>
    <div class="page-wrapper">
        <!-- SIDEBAR -->
        <% include sidebar %>

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <% include header %>

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="table-title-row">
                            <h2 class="title-1">分店列表</h2>
                            <button type="button" class="btn btn-light" onclick="addBranch()">新增</button>
                        </div>
                        <table id="branchTable" class="table bordered table-striped" width="100%">
                            <thead>
                                <tr>
                                    <th width="10%">狀態</th>
                                    <th width="10%">國家</th>
                                    <th width="10%">語言</th>
                                    <th width="15%">店名</th>
                                    <th width="35%">地址</th>
                                    <th width="10%">預約上限</th>
                                    <th width="10%">編輯 / 刪除</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
            <!-- END MAIN CONTENT-->
            <!-- END PAGE CONTAINER-->
        </div>

    </div>

    <!-- For Dropdown Use -->
    <input class="hide" type="text" id="selectedCid" readonly>
    <input class="hide" type="text" id="selectedLid" readonly>
    <!-- For Edit Use -->
    <input class="hide" type="text" id="status" readonly>
    <input class="hide" type="text" id="bakeryId" readonly>
    
    <!-- Modal -->
    <div class="modal fade" id="branchModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="title-1"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="modal-table">
                        <tr>
                            <th class="padRight">國家<span class="must">*</span></th>
                            <th class="padLeft">語言<span class="must">*</span></th>
                        </tr>
                        <tr>
                            <th class="padRight">
                                <div id="selectCountry" class="dropdown">
                                    <div class="select">
                                        <span id="selectedCoun">選擇國家</span>
                                        <i class="fa fa-chevron-left"></i>
                                    </div>
                                    <ul class="dropdown-menu"></ul>
                                </div>
                            </th>
                            <th class="padLeft">
                                <div id="selectLanguage" class="dropdown">
                                    <div class="select">
                                        <span id="selectedLang">選擇語言</span>
                                        <i class="fa fa-chevron-left"></i>
                                    </div>
                                    <ul class="dropdown-menu"></ul>
                                </div>
                            </th>
                        </tr>
                        <tr>
                            <th class="padRight">店名<span class="must">*</span></th>
                            <th class="padLeft">預約上限<span class="must">*</span></th>
                        </tr>
                        <tr>
                            <th class="padRight"><input class="modal-input" type="text" id="bakeryName" name="bakeryName" required></th>
                            <th class="padLeft"><input class="modal-input" type="number" id="reserveMax" name="reserveMax"></th>
                        </tr>
                        <tr>
                            <th>地址<span class="must">*</span></th>
                        </tr>
                        <tr>
                            <th colspan="2"><input class="modal-input" type="text" id="address" name="address"></th>
                        </tr>
                        <tr>
                            <th>說明</th>
                        </tr>
                        <tr>
                            <th colspan="2"><textarea class="modal-input" id="description" name="description"></textarea></th>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">關閉</button>
                    <button type="button" class="btn btn-primary" id="modalSubmit"></button>
                </div>
            </div>
        </div>
    </div>

    <!-- INCLUDE JS FILE -->
    <% include scriptJs %>

    <script type="text/javascript" src="/dashboard/js/branchSys.js"></script>

</body>

</html>
<!-- end document-->